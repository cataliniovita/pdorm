FROM golang:1.22-alpine AS build
WORKDIR /app
COPY go.mod ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o server ./main.go

FROM alpine:3.19
RUN apk add --no-cache ca-certificates curl
WORKDIR /srv
COPY --from=build /app/server /srv/server
EXPOSE 8080
ENV INTERPOLATE=1
CMD ["/srv/server"]


